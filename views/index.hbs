<script>
    var videobtn = document.getElementById('videobtn');
    var hidepage = document.getElementById('hidepage');
    var appvideo = document.getElementById('appvideo');

    videobtn.addEventListener('click', function () {
        hidepage.style.zIndex = '1000';
        hidepage.style.opacity = '1';
        appvideo.style.zIndex = '1001';
        appvideo.style.opacity = '1';
        document.body.style.overflow = 'hidden';
    })

    hidepage.addEventListener('click', function () {
        hidepage.style.zIndex = '-1';
        hidepage.style.opacity = '0';
        appvideo.style.zIndex = '-1';
        appvideo.style.opacity = '0';
        document.body.style.overflow = 'auto';
    })

    var prevbtn = document.getElementById('prevbtn');
    var nextbtn = document.getElementById('nextbtn');

    var slideimg = document.getElementById('slideimg');

    var imgs = document.getElementsByClassName('imgs');

    var index = 0;

    var imgwidth = imgs[index].offsetWidth;

    var imglength = imgs.length;

    slideimg.style.width = imgwidth * imglength + 'px';

    prevbtn.addEventListener('click', function () {
        index--;
        if (index < 0) {
            index = imglength - 1;
        }
        slideimg.scrollLeft = imgwidth * index;
    })

    nextbtn.addEventListener('click', function () {
        index++;
        if (index > imglength - 1) {
            index = 0;
        }
        slideimg.scrollLeft = imgwidth * index;
    })




</script>

